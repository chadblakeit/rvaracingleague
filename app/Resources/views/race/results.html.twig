{% embed '::layout.html.twig' %}

    {% block styles %}
        <style>
            .driver-container {
                width:100%;padding:8px 0 6px 0;background:#f2f2f2;margin-bottom:1px;border-bottom:0px solid #fff;font-size:20px;min-height:35px;
            }

        </style>
    {% endblock %}

    {% block content %}

        <div class="content-container dimension-10 mobile-dimension-11">

            <h3 class="text-center">Race Results</h3>
            <hr>
            <div style="width:820px;margin:0 auto;border:1px solid #000;padding:10px;">

                <div style="width:100%;background:#f2f2f2;">
                    <div>Race: {{ race.racename }}</div>

                    <div>
                        {% for key, result in userTotalPoints %}
                            <div style="margin:2px;background:#ccc;padding:5px;">[ {{ loop.index }} ] - :{{ result }}:</div>
                        {% endfor %}
                    </div>

                </div>
            </div>

        </div>

    {% endblock %}

    {% block javascripts %}
        <script type="text/javascript">
            $(document).ready(function() {

            });
        </script>
    {% endblock %}

{% endembed %}

